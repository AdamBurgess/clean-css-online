{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "h",
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "include": [
        "src", "types/types.d.ts"
    ]
}
